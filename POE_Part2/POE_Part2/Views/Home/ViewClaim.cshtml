@model IEnumerable<POE_Part2.Models.LecturerClaim>

<h2>Your Submitted Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date Submitted</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Supporting Document</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.SubmittedDate.ToShortDateString()</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@(claim.HoursWorked * claim.HourlyRate)</td>
                <td>@claim.Status</td>
                <td>
                    @if (!string.IsNullOrEmpty(claim.SupportingDocument))
                    {
                        <a href="@Url.Action("DownloadDocument", "Claim", new { claimId = claim.ClaimId })">
                            View Document
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>